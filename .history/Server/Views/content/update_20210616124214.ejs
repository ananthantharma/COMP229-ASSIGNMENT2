<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Contacts</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Name</span>
            <input type="text" class="form-control" placeholder="Enter Contact Name" aria-label="contact Name" aria-describedby="contact Name"
            name="name" value="<%= contact.name %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Brand</span>
            <input type="text" class="form-control" placeholder="Enter Contact Phone" aria-label="Contact Phone" aria-describedby="Contact Phone"
            name="phone" value="<%= contact.phone %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Category</span>
            <input type="text" class="form-control" placeholder="Enter Contact Email" aria-label="Contact Email" aria-describedby="Contact Email"
            name="email" value="<%= contact.email %>" required>
        </div>


            <% if(title == "Edit") { %>
                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %>
                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>  
            
            <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
        </div>
    </form>
</div>